  %body.floating-body
    -# Start Navbar
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{:type=>'button',:data => {:toggle=>'collapse',:target=>'.navbar-collapse'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href=>'#'} Blog Title
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href=>'/'} Home
            %li.dropdown
              %a.dropdown-toggle{:href=>'#',:data => {:toggle=>'dropdown'}}
                Archives
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href=>'/authors/'} By Author...
                %li
                  %a{:href=>'/categories/'} By Category...
                %li
                  %a{:href=>'/posts/'} By Date...
          %ul.nav.navbar-nav.navbar-right
            %li
              %a.btn{:data=>{:toggle=>'modal'},:href=>'#signin'}
                Sign in

    -# Start Page Component
    .container
