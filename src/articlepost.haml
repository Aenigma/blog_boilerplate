!!! 5
%html
  %head
    %meta{:name=>'viewport', :content=>'width=device-width, initial-scale=1.0'}
    %link{:rel=>'stylesheet',:href=>'//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css'}
    %link{:rel=>'stylesheet',:href=>'//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css'}
    %link{:rel=>'stylesheet',:href=>'./css/custom.css'}
    %script{:src=>'//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'}
    %script{:src=>'//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js'}
    %script{:src=>'//cdnjs.cloudflare.com/ajax/libs/holder/2.0/holder.min.js'}
    %title Post Article
    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      %script{:src=>'//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js'}
      %script{:src=>'//cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.js'}
  %body.floating-body
    -# Start Navbar
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle{:type=>'button',:data => {:toggle=>'collapse',:target=>'.navbar-collapse'}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href=>'#'} Blog Title
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href=>'/'} Home
            %li.dropdown
              %a.dropdown-toggle{:href=>'#',:data => {:toggle=>'dropdown'}}
                Archives
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href=>'/authors/'} By Author...
                %li
                  %a{:href=>'/categories/'} By Category...
                %li
                  %a{:href=>'/posts/'} By Date...
          %ul.nav.navbar-nav.navbar-right
            %li
              %a.dropdown-toggle{:href=>'#',:data => {:toggle=>'dropdown'}}
                Kevin Raoofi
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href=>'/authors/1'} Profile...
                %li
                  %a{:href=>'articlepost.html'} Submit new post...
                %li
                  %a{:href=>'/admin'} Blog admin...

    -# Start Page Component
    .container
      %h1 Article Submission Form
      .form
        .form-group
          %label{:for=>'image'} Image
          %input#image{:type=>'file'}
        .form-group
          %label{:for=>'categories'} Categories
          %select#categories.form-control{:multiple=>'true'}
            - (1..10).each do |i|
              %option{:value=>i}="Category#{i}"
        .form-group
          %label{:for=>'title'} Article Title
          %input#title.form-control{:type=>'text',:placeholder=>'Enter Article Title'}
        .form-group
          %label{:for=>'article'} Article
          %textarea#article.form-control
          %button.btn.btn-default{:type=>'submit'} Submit
