      -# Invisible modals from below
      -# Sign in
      #signin.modal.fade{:tabindex=>'-1',:role=>'dialog','aria-labeledby'=>'signinmodal','aria-hidden'=>'true'}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{:type=>'button',:data=>{:dismiss=>'modal'},'aria-hidden'=>'true'} &times; 
              %h4.modal-title Sign In
            .modal-body
              %form{:role=>'form'}
                .form-group
                  %label{:for=>'signin-username'} Username
                  %input#signin-username.form-control{:type=>'text',:placeholder=>'Your username'}
                .form-group
                  %label{:for=>'signin-password'} Password
                  %input#signin-password.form-control{:type=>'password',:placeholder=>'Password'}
            .modal-footer
              %button.btn.btn-primary Sign in
              %button.btn.btn-default{:data=>{:toggle=>'modal',:target=>'#signup'}} Sign up
              %button.btn.btn-default{:data=>{:dismiss=>'modal'}} Cancel
      -# Sign up
      #signup.modal.fade{:tabindex=>'-1',:role=>'dialog','aria-labeledby'=>'signupmodal','aria-hidden'=>'true'}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{:type=>'button',:data=>{:dismiss=>'modal'},'aria-hidden'=>'true'} &times; 
              %h4.modal-title Sign Up
            .modal-body
              %form{:role=>'form'}
                .form-group
                  %label{:for=>'signup-username'} Username
                  %input#signup-username.form-control{:type=>'text',:placeholder=>'Your username'}
                .form-group
                  %label{:for=>'signup-email'} Email
                  %input#signup-email.form-control{:type=>'email',:placeholder=>'Your Email'}
                .form-group
                  %label{:for=>'signup-password1'} Password
                  %input#signup-password1.form-control{:type=>'password',:placeholder=>'Enter Your Password'}
                .form-group
                  %label{:for=>'signup-password2'} Re-Enter Password
                  %input#signup-password2.form-control{:type=>'password',:placeholder=>'Enter Password Again'}
            .modal-footer
              %button.btn.btn-primary Submit
              %button.btn.btn-default{:data=>{:dismiss=>'modal'}} Cancel


